CREATE DATABASE PROJECT_TRACKER;

use project_tracker;


CREATE TABLE TBL_TASK (
    TASK_ID INT(5) NOT NULL AUTO_INCREMENT,
    TASK_NAME varchar(255),
    TASK_DESC varchar(255),
    TIME_STARTED timestamp,
    TIME_FINISHED timestamp,
	PRIMARY KEY (`TASK_ID`)
);

CREATE TABLE `TBL_USER`
(
	`USER_ID` INT(5) NOT NULL AUTO_INCREMENT,
 `USER_NAME` varchar(255),
 `USER_PWD` varchar(255),
 `TASK_ID` varchar(255),
 PRIMARY KEY (`USER_ID`)
);

ALTER TABLE TBL_TASK
  ADD COLUMN USER_ID VARCHAR(15) unsigned not null;
  
 ALTER TABLE TBL_USER
  DROP TASK_ID ;
  // MODIFY for editing column

ALTER TABLE TBL_TASK
  ADD COLUMN TASK_FILES LONGTEXT;
  
 CREATE TABLE `TBL_REMARKS`
(
	`REMARKS_ID` INT(5) NOT NULL AUTO_INCREMENT,
 `TASK_REMARKS` LONGTEXT,
 `NUM_LIKES` INT(5) NOT NULL,
 `NUM_DISLIKES` INT(5) NOT NULL,
 PRIMARY KEY (`REMARKS_ID`)
);

CREATE TABLE TBL_USER_REMARKS(
`REMARKS_ID` INT(5) NOT NULL ,
`USER_ID` INT(5) NOT NULL 
)

CREATE TABLE TBL_TASK_REMARKS(
`REMARKS_ID` INT(5) NOT NULL ,
`TASK_ID` INT(5) NOT NULL 
)


  
